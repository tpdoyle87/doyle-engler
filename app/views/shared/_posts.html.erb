<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-balance text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"><%= t('blog_section.heading') %></h2>
    </div>
    <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% posts.each do |post| %>
      <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
        <%= image_tag post.thumbnail, alt: t('blog_section.thumbnail_alt'), class: "absolute inset-0 -z-10 h-full w-full object-cover" %> 
        <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
        <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
        <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm/6 text-gray-300">
          <time datetime="<%= post.created_at.strftime('%Y-%m-%d') %>" class="mr-8"><%= post.created_at.strftime("%b-%d-%Y") %></time>
          <div class="-ml-4 flex items-center gap-x-4">
            <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
              <circle cx="1" cy="1" r="1" />
            </svg>
            <div class="flex gap-x-2.5">
              <% if post.name == "Thomas Doyle-Engler" %>
                <%= image_tag 'tom.jpg', alt: t('blog_section.founder_alt'), class: "h-6 w-6 flex-none rounded-full bg-white/10"%> 
              <% end %>
              <%= post.name %>
            </div>
          </div>
        </div>
        <h3 class="mt-3 text-lg/6 font-semibold text-white">
          <a href="/posts/<%= post.id %>">
            <span class="absolute inset-0"></span>
            <%= truncate(post.title, length: 30, omission: "...") %>
          </a>
        </h3>
      </article>
      <% end %>
    </div>
  </div>
</div>
